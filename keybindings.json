    //Correr tareas
    //C
        //Compilar y correr
        {
            "key": "ctrl+numpad0",
            "command": "workbench.action.tasks.runTask",
            "args": "C. Compilar y correr"
        },
        //Compilar
        {
            "key": "ctrl+numpad1",
            "command": "workbench.action.tasks.runTask",
            "args": "C. Compilar"
        },
        //Correr
        {
            "key": "ctrl+numpad2",
            "command": "workbench.action.tasks.runTask",
            "args": "C. Correr"
        },
    
    //Control de terminal
        //Matar terminal
        {
            "key": "ctrl+numpad_decimal",
            "command": "workbench.action.terminal.kill"
        },
        //Focus en problems
        {
            "key": "ctrl+numpad4",
            "command": "workbench.actions.view.problems",
            "when": "workbench.panel.markers.view.active"
        },
        //Focus en outpot
        {
            "key": "ctrl+numpad5",
            "command": "workbench.action.output.toggleOutput",
            "when": "workbench.panel.output.active"
        },
        //Focus en terminal
        {
            "key": "ctrl+numpad6",
            "command": "workbench.action.terminal.toggleTerminal",
        },
        //Focus en debug console
        {
            "key": "ctrl+numpad3",
            "command": "workbench.debug.action.toggleRepl",
        },
        //Scroll abajo
        {
            "key": "ctrl+numpad8",
            "command": "workbench.action.terminal.scrollDown"
        },
        //Scroll al fondo
        {
            "key": "ctrl+numpad_divide",
            "command": "workbench.action.terminal.scrollToBottom"
        },
        //Scroll arriba
        {
            "key": "ctrl+numpad9",
            "command": "workbench.action.terminal.scrollUp"
        },
        //Scroll al principio
        {
            "key": "ctrl+numpad_multiply",
            "command": "workbench.action.terminal.scrollToTop"
        },
        
    //Ajustar tama√±o de terminal
        //Agrandar
        {
            "key": "ctrl+numpad_add",
            "command": "workbench.action.terminal.resizePaneUp"
        },
        //Achicar
        {
            "key": "ctrl+numpad_subtract",
            "command": "workbench.action.terminal.resizePaneDown"
        },

    //Arbir consola
    {
        "key": "ctrl+numpad7",
        "command": "workbench.action.terminal.openNativeConsole",
    },

    //Focus en un editor
    {
        "key": "ctrl+alt+numpad5",
        "command": "workbench.action.toggleEditorWidths"
    },
    //Alternar layout horizonal/vertical
    {
        "key": "ctrl+alt+numpad2",
        "command": "workbench.action.toggleEditorGroupLayout"
    },
    //Focus en el siguiente grupo de editores
    {
        "key": "ctrl+alt+numpad8",
        "command": "workbench.action.focusNextGroup"
    },
    //Mueve el editor al siguiente grupo
    {
        "key": "ctrl+alt+numpad3",
        "command": "workbench.action.moveEditorToNextGroup"
    },
    //Mueve el editor al grupo anterior
    {
        "key": "ctrl+alt+numpad1",
        "command": "workbench.action.moveEditorToPreviousGroup"
    },
    //Focus en el siguiente editor
    {
        "key": "ctrl+alt+numpad6",
        "command": "workbench.action.nextEditor"
    },
    //Focus en el editor anterior
    {
        "key": "ctrl+alt+numpad4",
        "command": "workbench.action.previousEditor"
    },
    //Junta todos los editores en un unico grupo
    {
        "key": "ctrl+alt+numpad0",
        "command": "workbench.action.editorLayoutSingle"
    },
    //Ubica el grupo abajo (Sirve para hacer layouts de 1:2)
    {
        "key": "ctrl+alt+numpad9",
        "command": "workbench.action.moveActiveEditorGroupDown"
    },
    //Ubica el grupo a un lado (Revierte lo anterior)
    {
        "key": "ctrl+alt+numpad7",
        "command": "workbench.action.moveActiveEditorGroupLeft"
    }

]